#
#  Tests random list selection and assignment.
#  Sensitive to randomness implementation.

procedure main()
	local l, c

	l := []
	show(l)
	every l.put(!"abcdefghijklmn") do
		show(l)
	every c := !"pqrstuvwxyz" do
		?l := c & show(l)
end

#  show random samples and then whole list
procedure show(l)
	every 1 to 12 do
		writes(?l | "-")
	every writes("  " | !l | "\n")
end
